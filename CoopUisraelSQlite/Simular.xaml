                <Label Text="Meses Plazo: "/>
                <Entry Placeholder="Hasta 6 meses plazo" Keyboard="Numeric" x:Name="txtPlazo"/>

                <Label Text="Pago Total: "/>
                <Label x:Name="lbpagoTotal" Text=""/>
                <Label Text="Cuota mensual: "/>
                <Label x:Name="lbpagoMensual" Text=""/>
                <Button x:Name="btn_SimularPedido" Text="Calcular simulaciòn" Clicked="btn_SimularPedido_Clicked" BackgroundColor="Azure">
                </Button>

            </StackLayout>
               </ScrollView>
    </ContentPage.Content>
</ContentPage>
